<div class="wrapper">

  <div class="fadeIn first">
    <h1>Iniciar sesión</h1>
  </div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field fadeIn second">
    <%= f.label :email, value: "Correo electrónico" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field fadeIn third">
    <%= f.label :password, value: "Contraseña" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field  fadeIn third">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, value: "¿Recordar cuenta?" %>
    </div>
  <% end -%>

  <div class="actions fadeIn fourth">
    <%= f.submit "Entrar" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>

