<div><p></p></div>
<div class="wrapper pagination-centered text-center">
  <div><p></p></div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'pagination-centered text-center') do |f| %>
    <div><p></p></div>
    <div class="fadeIn first">
      <h1>Iniciar sesión</h1>
    </div>

    <div class="field fadeIn second">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Correo electrónico" %>
    </div>

    <div class="field fadeIn third">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Contraseña" %>
    </div>

    <div class="field fadeIn third">
    <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, value: "¿Recordar cuenta?" %>
    <% end -%>
    </div>

    <div class="actions fadeIn fourth">
      <%= f.submit "Entrar" %>
    </div>
  <% end %>

  <div class="col-4 text-center">
  <%= render "devise/shared/links" %>
  </div>

</div>

