<div><p></p></div>
<div class="wrapper pagination-centered text-center">
  <div><p></p></div>

  <div class="fadeIn first">
    <div><p></p></div>
    <h1>Registrar cuenta</h1>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field fadeIn second">
      <%= f.text_field :fullName, autofocus: true, placeholder:  "Nombre completo" %>
    </div>

    <div class="field fadeIn second">
      <%= f.label :password_confirmation, value: "Número de personal", class: "text-dark" %>
      <%= f.text_field :personalNumber, autofocus: true %>
    </div>

    <div class="field fadeIn third">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Correo electrónico" %>
    </div>

    <div class="field fadeIn third">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Contraseña" %><br />
      <% if @minimum_password_length %>
        <em class="text-dark">(<%= @minimum_password_length %> caracteres mínimos)</em>
      <% end %><br />
    </div>

    <div class="field fadeIn fourth">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirmación de contraseña" %>
    </div>

    <div class="actions fadeIn fourth">
      <%= f.submit "Registrar" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
